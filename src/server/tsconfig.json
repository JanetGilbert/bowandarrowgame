// TypeScript config for all Devvit server code.
{
  "extends": "../../tools/tsconfig-base.json",
  "compilerOptions": {
    "lib": ["ES2023"],

    "types": ["node"],

    "rootDir": ".",

    "outDir": "../../dist/types/server",

    "tsBuildInfoFile": "../../dist/tsconfig.tsbuildinfo",

    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"],
      "@game/*": ["src/client/game/*"],
      "@objects/*": ["src/client/game/objects/*"],
      "@scenes/*": ["src/client/game/scenes/*"]
    }
  },
  // https://github.com/Microsoft/TypeScript/issues/25636
  "include": ["**/*", "**/*.json", "../../package.json"],
  "exclude": ["**/*.test.ts"],
  "references": [{ "path": "../shared" }]
}
